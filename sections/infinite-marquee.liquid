{{ 'infinite-marquee.css' | asset_url | stylesheet_tag }}

<div 
  class="marquee-container" 
  style="
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    height: {{ section.settings.height }}px;
    background-color: {{ section.settings.background_color }};
  "
>
  <div class="marquee">
    <div 
      class="track" 
      style="
        color: {{ section.settings.text_color }};
        font-family: {{ section.settings.font_family.family }};
        font-size: {{ section.settings.font_size }}px;
      "
    >
        {{ section.settings.title }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Infinite Marquee",
  "settings": [
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margin Top",
      "min": 0,
      "max": 60,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "min": 0,
      "max": 60,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Text",
      "default": "Marquee Text"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Marquee Height",
      "min": 30,
      "max": 150,
      "step": 10,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 12,
      "max": 48,
      "step": 2,
      "default": 18,
      "unit": "px"
    },
    {
      "type": "font_picker",
      "id": "font_family",
      "label": "Font Family",
      "default": "sans-serif"
    }
  ],
  "presets": [
    {
      "name": "Infinite Marquee",
      "settings": {}
    }
  ]
}
{% endschema %}
