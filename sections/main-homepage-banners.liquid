{{ 'section-homepage-banners.css' | asset_url | stylesheet_tag }}

<div class="homepage-category-banners">
  <div class="homepage-category-banners-row">
    <div
      class="homepage-category-banners-col"
       style="background-image: url('{% if section.settings.image_1 != blank %}{{ section.settings.image_1 | image_url: height: 350 }}{% else %}{{ 'men_with_laptop.webp' | asset_url }}{% endif %}');"
    >
      <div class="overlay">
        <div class="text">
          <h2 class="banner-title">{{ section.settings.image_1_title }}</h2>
          <a  class="button {{ section.settings.button_style }}" href="{{ section.settings.image_1_link }}">{{ section.settings.image_1_button_text }}</a>
        </div>
      </div>
    </div>
    <div
      class="homepage-category-banners-col"
       style="background-image: url('{% if section.settings.image_2 != blank %}{{ section.settings.image_2 | image_url: height: 350 }}{% else %}{{ 'tshirt.webp' | asset_url }}{% endif %}');"
    >
      <div class="overlay">
        <div class="text">
          <h2 class="banner-title">{{ section.settings.image_2_title }}</h2>
          <a class="button {{ section.settings.button_style }}" href="{{ section.settings.image_2_link }}">{{ section.settings.image_2_button_text }}</a>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "HomePage Banners",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "First Image"
    },
    {
      "type": "text",
      "id": "image_1_title",
      "label": "First Image Title",
      "default": "Product Title 1"
    },
    {
      "type": "url",
      "id": "image_1_link",
      "label": "First Image Link"
    },
     {
      "type": "text",
      "id": "image_1_button_text",
      "label": "Button Text",
        "default": "See More"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second Image"
    },
    {
      "type": "text",
      "id": "image_2_title",
      "label": "Second Image Title",
      "default": "Product Title 2"
    },
    {
      "type": "url",
      "id": "image_2_link",
      "label": "Second Image Link"
    },
    {
      "type": "text",
      "id": "image_2_button_text",
      "label": "Button Text",
       "default": "See More"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "options": [
        {
          "value": "button--primary",
          "label": "Primary"
        },
        {
          "value": "button--secondary",
          "label": "Secondary"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer", "aside"]
  },
  "presets": [
    {
      "name": "HomePage Banners",
      "settings": {}
    }
  ]
}
{% endschema %}
